<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_item_rc"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_persona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_persona"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/example_izanagi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_red_img_admin"/>
        <TextView
            android:id="@+id/txt_persona_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persona name"
            android:textSize="28sp"
            android:textColor="@color/p5_red"
            android:fontFamily="@font/p5hatty"
            app:layout_constraintStart_toEndOf="@id/img_persona"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
<!--    edit    -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="28sp"
            android:textColor="@color/p5_red"
            android:fontFamily="@font/p5hatty"
            app:layout_constraintStart_toEndOf="@id/img_persona"
            app:layout_constraintTop_toBottomOf="@id/txt_persona_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
<!--        view-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view"
            android:textSize="28sp"
            android:textColor="@color/p5_red"
            android:fontFamily="@font/p5hatty"
            app:layout_constraintStart_toEndOf="@id/btn_edit"
            app:layout_constraintTop_toBottomOf="@id/txt_persona_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
<!--        delete -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="28sp"
            android:textColor="@color/p5_red"
            android:fontFamily="@font/p5hatty"
            app:layout_constraintStart_toEndOf="@id/img_persona"
            app:layout_constraintTop_toBottomOf="@id/btn_view"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>