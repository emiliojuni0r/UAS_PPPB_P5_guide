<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_item_rc"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_persona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        
        <ImageView
            android:id="@+id/img_persona"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:src="@drawable/example_izanagi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_red_img"/>
        <TextView
            android:id="@+id/txt_persona_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persona name"
            android:textSize="28sp"
            android:textColor="@color/p5_red"
            android:fontFamily="@font/p5expose"
            app:layout_constraintTop_toBottomOf="@id/img_persona"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>